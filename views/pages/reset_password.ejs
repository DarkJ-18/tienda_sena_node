<!DOCTYPE html>
<html>
<head>
    <title>Restablecer Contrase単a</title>
    <link rel="stylesheet" href="/static/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2>Restablecer Contrase単a</h2>
        <form action="/reset-password/<%= token %>" method="POST">
            <div class="mb-3">
                <label for="password" class="form-label">Nueva contrase単a</label>
                <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <div class="mb-3">
                <label for="valid_password" class="form-label">Confirmar contrase単a</label>
                <input type="password" class="form-control" id="valid_password" name="valid_password" required>
            </div>
            <button type="submit" class="btn btn-success">Restablecer</button>
        </form>
        <% if (messages && messages.length > 0) { %>
            <% messages.forEach(function(message) { %>
                <div class="alert alert-<%= message.type %> mt-3"><%= message.text %></div>
            <% }); %>
        <% } %>
    </div>
</body>
</html>